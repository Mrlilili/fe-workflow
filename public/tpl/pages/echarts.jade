block script
  script.
    // 基于准备好的dom，初始化echarts实例
    var t = '#{testdata}';

    var myChart = echarts.init(document.getElementById('main'));
    // 指定图表的配置项和数据
    console.log(t);

    var option = {
      title: {
        text: 'ECharts 入门示例'
      },
      tooltip: {},
      legend: {
        data: ['销量']
      },
      xAxis: {
        data: ["衬衫", "羊毛衫", "雪纺衫", "裤子", "高跟鞋", "袜子"]
